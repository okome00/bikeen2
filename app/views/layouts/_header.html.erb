<!-- ヘッダー部分テンプレ -->
<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
    <a class="navbar-brand" href="/">
      <span class="header-name ml-5">bikeen</span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                  aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %> <!-- Loginヘッダー -->
          <li class="search-item">
            <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
              <%= f.text_field :keyword %>
              <%= f.submit "🔍" %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to posts_path, class: "nav-link text-dark" do %>
              <i class="fas fa-house"></i> Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_post_path, class: "nav-link text-dark" do %>
              <i class="fas fa-comment"></i> New post
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to notifications_path, class: "nav-link text-dark" do %>
              <% if unchecked_notifications.any? %>
                <i class="fas fa-bell"></i> Noice<i class="fas fa-circle n-circle" style="color: gold;"></i>
              <% else %>
                <i class="fas fa-bell"></i> Noice
              <% end %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to user_path(current_user.id), class: "nav-link text-dark" do %>
              <i class="fas fa-address-card"></i> My prolile
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-dark" do %>
              <i class="fas fa-right-from-bracket"></i> Log out
            <% end %>
          </li>
        <% else %> <!-- Logoutヘッダー -->
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link text-dark" do %>
              <i class="fas fa-user-plus"></i> Sign up
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link text-dark" do %>
              <i class="fas fa-sign-in-alt"></i> Log in
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
